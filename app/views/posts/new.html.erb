<h1>New Post</h1>

<ul>  

<li>New Post </li>

<%= form_for @post, :url => { :action => "create" }, :html => {:class => "new_post"} do |f| %>
  <p><%= f.label :title %></p>
  <p><%= f.text_field :title %></p>
  <p><%= f.label :body %></p>
  <p><%= f.text_area :body, :size => "60x12" %></p>
  <p><%= f.submit "Create" %></p>
<% end %>

    <p> <%= link_to "Back", posts_path %> </p>
</ul>

